version: '3.7'
networks:
  sigasp-net:
services:

  postgresql:
    container_name: sigasp-db
    networks:
      - sigasp-net
    build:
      context: .
      dockerfile: docker/postgres/Dockerfile
    environment:
      - POSTGRES_USER=sigasp
      - POSTGRES_PASSWORD=@posjav*2015
    ports:
      - 5432:5432
    volumes:
      - ./:/var/app
      - ~/sigasp-pg-data:/var/lib/postgresql/data

  wildfly:
    container_name: sigasp-server
    networks:
      - sigasp-net
    build:
      context: .
      dockerfile: docker/wildfly/Dockerfile
    ports:
      - 8080:8080
      - 9990:9990
      - 8787:8787
    volumes:
      - ./:/var/app
      - ~/sigasp-server-data:/opt/jboss/wildfly/standalone/log
    depends_on:
      - postgresql

